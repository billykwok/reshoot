{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "WebWorker", "ESNext"],
    "baseUrl": ".",
    "paths": {},
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "types"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "test/**/*.ts",
    "test/**/*.tsx",
    "types/**/*.d.ts",
    "node_modules"
  ]
}
