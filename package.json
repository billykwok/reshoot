{
  "name": "reshoot",
  "description": "All-in-one responsive image processing library with webpage loader, babel macro and React component",
  "author": "Billy Kwok <xobkwok@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run --parallel --no-private build",
    "test:package": "jest",
    "test:snapshot": "yarn build && webpack --config=integration/webpack.config.js && jest integration",
    "test": "yarn build && webpack --config=integration/webpack.config.js && jest",
    "commit": "commit",
    "semantic-release": "semantic-release",
    "example:build": "lerna run --parallel build --scope=example-*",
    "example:dev": "lerna run --parallel dev --scope=example-*"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.1",
    "@commitlint/format": "^7.5.0",
    "@commitlint/prompt": "^7.5.0",
    "@reshoot/macro": "^0.0.0",
    "@reshoot/react": "^0.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-macros": "^2.5.0",
    "babel-plugin-tester": "^6.0.0",
    "common-tags": "^1.8.0",
    "conventional-changelog-atom": "^2.0.1",
    "conventional-changelog-cli": "^2.0.12",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.3.0",
    "flow-bin": "^0.93.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.4",
    "memory-fs": "^0.4.1",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-test-renderer": "^16.8.3",
    "react-testing-library": "^6.0.0",
    "react-waypoint": "^9.0.0",
    "reshoot-loader": "^0.0.0",
    "semantic-release": "^15.13.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write",
      "git add -A"
    ]
  }
}
