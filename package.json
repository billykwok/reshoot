{
  "name": "reshoot",
  "description": "All-in-one responsive image processing library with webpage loader, babel macro and React component",
  "author": "Billy Kwok <xobkwok@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run --parallel --no-private build",
    "test:package": "jest",
    "test:snapshot": "yarn build && webpack --config=integration/webpack.config.js && jest integration",
    "test": "yarn build && webpack --config=integration/webpack.config.js && jest",
    "commit": "commit",
    "release": "lerna publish --yes --no-changelog"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime-corejs3": "^7.4.4",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@commitlint/format": "^7.6.1",
    "@commitlint/prompt-cli": "^7.6.1",
    "@emotion/babel-preset-css-prop": "^10.0.9",
    "@emotion/core": "^10.0.10",
    "@reshoot/loader": "file:packages/reshoot-loader",
    "@reshoot/macro": "file:packages/reshoot-macro",
    "@reshoot/react": "file:packages/reshoot-react",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^2.5.1",
    "babel-plugin-tester": "^6.2.1",
    "common-tags": "^1.8.0",
    "conventional-changelog-atom": "^2.0.1",
    "core-js": "^3.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^3.8.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "flow-bin": "^0.98.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.2.2",
    "jest-emotion": "^10.0.11",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.6",
    "memory-fs": "^0.4.1",
    "prettier": "^1.17.0",
    "prettier-eslint": "^8.8.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^7.0.0",
    "react-waypoint": "^9.0.2",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write",
      "git add -A"
    ]
  }
}
